<%= form_for :user, :url => spree.user_session_path do |f| %>
  <div id="password-credentials">
    <p>
      <%= f.label :email, t(:email) %><br />
      <%= f.email_field :email, :class => 'title' %>
    </p>
		<h6>
			<%=t :have_account, :site_name => Spree::Config[:site_name] %>
		</h6>
		<p>
		    <%= radio_button_tag :has_account, "false" %>
		    <%= f.label :has_account, t(:no_guest) %>
				<br/>
		    <%= radio_button_tag :has_account, "true", true %>
		    <%= f.label :has_account, t(:yes_password) %>
		</p>
    <div id="password_field">
      <%= f.label :password, t(:password) %><br />
      <%= f.password_field :password, :class => 'title' %>
		  <p>
		    <label>
		      <%= f.check_box :remember_me %>
		      <%= f.label :remember_me, t(:remember_me) %>
		    </label>
		  </p>
    </div>

  </div>


  <p><%= f.submit t(:continue), :class => 'button primary' %></p>
<% end %>